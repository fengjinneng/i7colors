<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.pengyouquan.ChoiceHuatiActivity">

    <include
        android:id="@+id/include42"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/choice_huati_slidingTabLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/x70"
        app:layout_constraintEnd_toStartOf="@+id/textView313"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include42"
        app:tl_indicator_color="@color/chunhongse"
        app:tl_indicator_width="@dimen/x50"
        app:tl_textsize="@dimen/x30"
        app:tl_textSelectColor="@color/chunhongse"
        app:tl_textUnselectColor="@color/erjibiaoti">

    </com.flyco.tablayout.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/choice_huati_viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView282" />

    <ImageView
        android:id="@+id/choice_huati_xiala"
        android:layout_width="@dimen/x100"
        android:layout_height="0dp"
        android:padding="@dimen/x25"
        app:layout_constraintBottom_toBottomOf="@+id/choice_huati_slidingTabLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include42"
        app:srcCompat="@mipmap/xiajiantu_hongse" />

    <TextView
        android:id="@+id/textView282"
        android:layout_width="0dp"
        android:layout_height="@dimen/x16"
        android:background="@color/fengexian"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice_huati_slidingTabLayout" />

    <TextView
        android:id="@+id/textView313"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/fengexian"
        app:layout_constraintBottom_toTopOf="@+id/textView282"
        app:layout_constraintEnd_toStartOf="@+id/choice_huati_xiala"
        app:layout_constraintTop_toBottomOf="@+id/include42" />


</android.support.constraint.ConstraintLayout>