<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x240">


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/baise"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/item_kaifangshangcheng_img"
                android:layout_width="@dimen/x240"
                android:layout_height="match_parent"
                android:padding="@dimen/x48"
                android:background="@color/fengexian"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/qiugoudating" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x4"
                android:background="@color/fengexian"
                app:layout_constraintEnd_toEndOf="@+id/item_kaifangshangcheng_company"
                app:layout_constraintStart_toStartOf="@+id/item_kaifangshangcheng_company"
                app:layout_constraintTop_toBottomOf="@+id/item_kaifangshangcheng_company" />

            <TextView
                android:id="@+id/item_kaifangshangcheng_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x30"
                android:layout_marginStart="@dimen/x48"
                android:layout_marginTop="@dimen/x26"
                android:text="徐州开达精细化工有限公司"
                android:textColor="@color/erjibiaoti"
                android:textSize="@dimen/x30"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/item_kaifangshangcheng_img"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x14"
                android:text="联系方式:"
                android:textSize="@dimen/x24"
                app:layout_constraintStart_toStartOf="@+id/item_kaifangshangcheng_company"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <TextView
                android:id="@+id/item_kaifangshangcheng_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="15580808080"
                android:textSize="@dimen/x24"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView8" />


            <co.lujun.androidtagview.TagContainerLayout
                android:id="@+id/kaifangshangcheng_tag_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x24"
                app:container_background_color="@color/baise"
                app:container_border_color="@color/baise"
                app:container_enable_drag="false"
                app:container_max_lines="1"
                app:horizontal_interval="@dimen/x12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/textView17"
                app:tag_background_color="@color/baise"
                app:tag_border_color="@color/erjibiaoti"
                app:tag_corner_radius="5dp"
                app:tag_text_size="@dimen/x20"
                app:tag_theme="none"
                app:tag_vertical_padding="@dimen/x5"
                app:vertical_interval="@dimen/x10">

            </co.lujun.androidtagview.TagContainerLayout>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:text="所在地区:"
                android:textSize="@dimen/x24"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/item_kaifangshangcheng_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江苏省徐州市"
                android:textSize="@dimen/x24"
                app:layout_constraintStart_toStartOf="@+id/item_kaifangshangcheng_phone"
                app:layout_constraintTop_toTopOf="@+id/textView17" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                app:layout_constraintStart_toStartOf="@+id/kaifangshangcheng_tag_container"
                app:layout_constraintTop_toBottomOf="@+id/kaifangshangcheng_tag_container" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>