<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include28"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_tuangouxiangqing_status_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include28">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:theme="@style/ToolbarTheme">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/baise"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical"
                    android:scaleType="centerInside"
                    app:layout_collapseMode="parallax">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/baise"
                        tools:context=".huodong.tuangou.activity.TuangouxiangqingActivity">

                        <View
                            android:id="@+id/include15"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <ImageView
                            android:id="@+id/activity_tuangouxiangqing_img"
                            android:layout_width="@dimen/x500"
                            android:layout_height="@dimen/x500"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/include15" />

                        <ImageView
                            android:id="@+id/activity_tuangouxiangqing_status"
                            android:layout_width="@dimen/x170"
                            android:layout_height="@dimen/x170"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/activity_tuangouxiangqing_img"
                            app:srcCompat="@mipmap/tuangou_weikaishi" />

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/constraintLayout9"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toTopOf="@+id/constraintLayout10"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_img"
                            app:layout_constraintTop_toBottomOf="@+id/include15"
                            app:layout_constraintVertical_chainStyle="packed">

                            <ImageView
                                android:id="@+id/imageView14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@mipmap/danyonghucaigou" />

                            <TextView
                                android:id="@+id/activity_tuangouxiangqing_danyonghucaigou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:gravity="center"
                                android:textSize="@dimen/x28"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView14" />
                        </android.support.constraint.ConstraintLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/fengexian"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/constraintLayout9"
                            app:layout_constraintTop_toTopOf="@+id/constraintLayout10" />

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/constraintLayout10"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toTopOf="@+id/constraintLayout11"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_img"
                            app:layout_constraintTop_toBottomOf="@+id/constraintLayout9">

                            <TextView
                                android:id="@+id/activity_tuangouxiangqing_yuanjia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="@dimen/x8"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/activity_tuangouxiangqing_yuanjia_danwie"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView132" />

                            <TextView
                                android:id="@+id/activity_tuangouxiangqing_yuanjia_danwie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="@+id/activity_tuangouxiangqing_yuanjia"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_yuanjia" />

                            <TextView
                                android:id="@+id/textView110"
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:background="@color/erjibiaoti"
                                app:layout_constraintBottom_toBottomOf="@+id/activity_tuangouxiangqing_yuanjia"
                                app:layout_constraintEnd_toEndOf="@+id/activity_tuangouxiangqing_yuanjia_danwie"
                                app:layout_constraintStart_toStartOf="@+id/activity_tuangouxiangqing_yuanjia"
                                app:layout_constraintTop_toTopOf="@+id/activity_tuangouxiangqing_yuanjia" />

                            <TextView
                                android:id="@+id/textView132"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:text="原价:"
                                app:layout_constraintBottom_toTopOf="@+id/activity_tuangouxiangqing_yuanjia"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed" />
                        </android.support.constraint.ConstraintLayout>


                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@color/fengexian"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/constraintLayout10"
                            app:layout_constraintTop_toTopOf="@+id/constraintLayout11" />

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/constraintLayout11"
                            android:layout_width="@dimen/x268"
                            android:layout_height="0dp"
                            android:background="@mipmap/shangpin_jiage"
                            app:layout_constraintBottom_toBottomOf="@+id/activity_tuangouxiangqing_img"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_img"
                            app:layout_constraintTop_toBottomOf="@+id/constraintLayout10">

                            <TextView
                                android:id="@+id/textView112"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:text="团购价:"
                                android:textColor="@color/baise"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/activity_tuangouxiangqing_tuangoujia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/baise"
                                android:textSize="@dimen/x40"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toStartOf="@+id/activity_tuangouxiangqing_tuangoujia_danwei"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView112" />

                            <TextView
                                android:id="@+id/activity_tuangouxiangqing_tuangoujia_danwei"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/baise"
                                app:layout_constraintBaseline_toBaselineOf="@+id/activity_tuangouxiangqing_tuangoujia"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_tuangoujia" />
                        </android.support.constraint.ConstraintLayout>

                        <TextView
                            android:id="@+id/activity_tuangouxiangqing_productname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/erjibiaoti"
                            android:textSize="@dimen/x36"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/activity_tuangouxiangqing_img" />

                        <TextView
                            android:id="@+id/activity_tuangouxiangqing_shengyu_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            app:layout_constraintBottom_toBottomOf="@+id/activity_tuangouxiangqing_shengyu"
                            app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_shengyu" />

                        <TextView
                            android:id="@+id/activity_tuangouxiangqing_shengyu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            app:layout_constraintBottom_toBottomOf="@+id/textView126"
                            app:layout_constraintStart_toEndOf="@+id/textView126" />

                        <TextView
                            android:id="@+id/textView126"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="剩余量:"

                            app:layout_constraintBottom_toBottomOf="@+id/activity_tuangouxiangqing_total_unit"
                            app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_total_unit" />

                        <TextView
                            android:id="@+id/activity_tuangouxiangqing_total_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            app:layout_constraintBottom_toBottomOf="@+id/activity_tuangouxiangqing_total"
                            app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_total" />

                        <TextView
                            android:id="@+id/activity_tuangouxiangqing_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            app:layout_constraintBottom_toBottomOf="@+id/textView129"
                            app:layout_constraintStart_toEndOf="@+id/textView129" />

                        <TextView
                            android:id="@+id/textView129"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="总量:"

                            app:layout_constraintStart_toStartOf="@+id/activity_tuangouxiangqing_productname"
                            app:layout_constraintTop_toBottomOf="@+id/activity_tuangouxiangqing_productname" />

                        <TextView
                            android:id="@+id/activity_tuangouxiangqing_shengyushijian_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:text="团购剩余时间:"
                            android:textSize="@dimen/x28"
                            app:layout_constraintStart_toStartOf="@+id/activity_tuangouxiangqing_productname"
                            app:layout_constraintTop_toBottomOf="@+id/activity_tuangouxiangqing_productname" />

                        <cn.iwgang.countdownview.CountdownView
                            android:id="@+id/countdownView"
                            android:layout_width="0dp"
                            android:layout_height="34dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            app:isHideTimeBackground="false"
                            app:isShowDay="true"
                            app:isShowHour="true"
                            app:isShowMinute="true"
                            app:isShowSecond="true"
                            app:isTimeTextBold="true"
                            app:layout_constraintBottom_toBottomOf="@+id/activity_tuangouxiangqing_shengyushijian_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_shengyushijian_text"
                            app:layout_constraintTop_toTopOf="@+id/activity_tuangouxiangqing_shengyushijian_text"
                            app:suffixDay="天"
                            app:suffixGravity="center"
                            app:suffixHour="时"
                            app:suffixMinute="分"
                            app:suffixSecond="秒"
                            app:suffixTextColor="#000000"
                            app:suffixTextSize="12sp"
                            app:timeBgColor="@color/chunhongse"
                            app:timeBgRadius="5dp"
                            app:timeBgSize="@dimen/x48"
                            app:timeTextColor="@color/baise"
                            app:timeTextSize="@dimen/x30" />

                        <TextView
                            android:id="@+id/activity_tuangouxiangqing_yirenling"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x40"

                            app:layout_constraintStart_toStartOf="@+id/activity_tuangouxiangqing_shengyushijian_text"
                            app:layout_constraintTop_toBottomOf="@+id/activity_tuangouxiangqing_shengyushijian_text" />

                        <SeekBar
                            android:id="@+id/activity_tuangouxiangqing_seekBar"
                            style="@style/custom_seekbar"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/x8"
                            app:layout_constraintBottom_toBottomOf="@+id/activity_tuangouxiangqing_dacheng"
                            app:layout_constraintEnd_toStartOf="@+id/activity_tuangouxiangqing_dacheng"
                            app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_yirenling"
                            app:layout_constraintTop_toTopOf="@+id/activity_tuangouxiangqing_dacheng" />

                        <TextView
                            android:id="@+id/activity_tuangouxiangqing_dacheng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"

                            app:layout_constraintBottom_toBottomOf="@+id/activity_tuangouxiangqing_yirenling"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/textView361"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/fengexian"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/activity_tuangouxiangqing_dacheng" />

                        <ImageView
                            android:id="@+id/activity_tuangouxiangqing_is_cut_img"
                            android:layout_width="@dimen/x180"
                            android:layout_height="@dimen/x120"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:src="@mipmap/fenxiangkanjia"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView361" />

                        <TextView
                            android:id="@+id/activity_tuangouxiangqing_is_cut_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:text="此团购还可以参与砍价，微信分享给好 友并成功砍价，还能拿到更低的价格！"
                            android:textSize="@dimen/x30"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/activity_tuangouxiangqing_is_cut_img"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_is_cut_img"
                            app:layout_constraintTop_toTopOf="@+id/activity_tuangouxiangqing_is_cut_img" />



                    </android.support.constraint.ConstraintLayout>


                </LinearLayout>

                <!--<android.support.v7.widget.Toolbar-->
                <!--android:id="@+id/toolbar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="?attr/actionBarSize"-->
                <!--android:background="#00ffffff"-->
                <!--android:gravity="center_vertical"-->
                <!--app:layout_collapseMode="pin"-->
                <!--app:popupTheme="@style/AppTheme.PopupOverlay"-->
                <!--app:theme="@style/ToolbarTheme"-->
                <!--app:titleTextColor="#ffffff" />-->

            </android.support.design.widget.CollapsingToolbarLayout>


            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_list_item"
                app:tabIndicatorColor="@color/chunhongse"
                app:tabSelectedTextColor="@color/chunhongse"
                app:tabTextColor="#A7A7A7" />

        </android.support.design.widget.AppBarLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    </android.support.design.widget.CoordinatorLayout>


    <LinearLayout
        android:id="@+id/activity_tuangouxiangqing_status_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/x98"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/activity_tuangouxiangqing_yicantuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/fengexian"
            android:gravity="center"
            android:text="已参团"
            android:visibility="gone"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/activity_tuangouxiangqing_status_name"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/activity_tuangouxiangqing_status_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@mipmap/bg"
            android:text="我要团购"
            android:layout_weight="2"
            android:textColor="@color/baise"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_yicantuan"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
