<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x260">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="@dimen/x103"
        android:layout_height="@dimen/x103"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/x36"
        android:layout_marginTop="@dimen/x22"
        app:srcCompat="@mipmap/morentouxiang" />

    <TextView
        android:id="@+id/textView"
        android:singleLine="true"
        android:textSize="@dimen/x30"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/x24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView9"
        android:layout_marginStart="84dp"
        android:text="七彩云应邀参加孟加拉染料展" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="@dimen/x6"
        android:singleLine="true"
        android:layout_marginRight="@dimen/x24"
        android:text="2018年9月12-15日，2018（第十一届）孟加拉国际染料化工展览会Dyechem Bangladesh 隆重开幕" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/x90"
        android:layout_marginTop="@dimen/x10"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView19"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="@dimen/x28"
        android:layout_height="@dimen/x28"
        android:layout_marginTop="@dimen/x16"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/imageView10"
        app:srcCompat="@mipmap/mimasuo" />

    <TextView
        android:id="@+id/item_toutiao_recyclerview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/x40"
        android:layout_marginBottom="@dimen/x24"
        android:includeFontPadding="false"
        android:text="2018-09-14" />
</RelativeLayout>