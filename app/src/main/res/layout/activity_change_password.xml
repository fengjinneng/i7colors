<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.user.ChangePasswordActivity">


    <include
        android:id="@+id/include23"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_change_password_yuanmima"
        android:layout_width="0dp"
        android:layout_height="@dimen/x100"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_dengluwenbenkuang"
        android:hint="请输入原密码"
        android:inputType="textPassword"
        android:paddingLeft="8dp"

        app:layout_constraintBottom_toTopOf="@+id/activity_change_password_new1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/activity_change_password_new1"
        app:layout_constraintTop_toBottomOf="@+id/include23"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/activity_change_password_new1"
        android:layout_width="0dp"
        android:layout_height="@dimen/x100"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_dengluwenbenkuang"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:paddingLeft="8dp"

        app:layout_constraintBottom_toTopOf="@+id/activity_change_password_new2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/activity_change_password_new2"
        app:layout_constraintTop_toBottomOf="@+id/activity_change_password_yuanmima" />

    <EditText
        android:id="@+id/activity_change_password_new2"
        android:layout_width="0dp"
        android:layout_height="@dimen/x100"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_dengluwenbenkuang"
        android:hint="请再次输入密码"
        android:paddingLeft="8dp"

        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/activity_change_password_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView176"
        app:layout_constraintTop_toBottomOf="@+id/activity_change_password_new1" />

    <Button
        android:id="@+id/activity_change_password_submit"
        android:layout_width="0dp"
        android:layout_height="@dimen/x100"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/anniujianbian_round"
        android:text="确认修改"
        android:textColor="@color/baise"
        android:textSize="@dimen/x36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_change_password_new2" />

    <TextView
        android:id="@+id/textView172"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@mipmap/bitiantupian"
        android:text="原密码:"
        android:gravity="center"

        android:drawablePadding="@dimen/x8"

        android:textColor="@color/erjibiaoti"
        app:layout_constraintBottom_toTopOf="@+id/activity_change_password_new1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_change_password_yuanmima" />

    <TextView
        android:id="@+id/textView175"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="新密码:"
        android:drawablePadding="@dimen/x8"
        android:drawableLeft="@mipmap/bitiantupian"

        android:textColor="@color/erjibiaoti"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/activity_change_password_new1"
        app:layout_constraintStart_toStartOf="@+id/textView172"
        app:layout_constraintTop_toTopOf="@+id/activity_change_password_new1" />

    <TextView
        android:id="@+id/textView176"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="确认密码:"
        android:drawablePadding="@dimen/x8"
        android:drawableLeft="@mipmap/bitiantupian"

        android:textColor="@color/erjibiaoti"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/activity_change_password_new2"
        app:layout_constraintStart_toStartOf="@+id/textView175"
        app:layout_constraintTop_toTopOf="@+id/activity_change_password_new2" />
</android.support.constraint.ConstraintLayout>