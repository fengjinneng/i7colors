<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_chanpincanshu_first"
        android:layout_width="@dimen/x240"
        android:layout_height="0dp"
        android:background="@color/searchColor"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_chanpincanshu_second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_chanpincanshu_second" />

    <TextView
        android:id="@+id/item_chanpincanshu_second"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/x80"
        android:background="@color/baise"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_chanpincanshu_first"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>