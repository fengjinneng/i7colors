<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.home.XiaoxiFragment">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_pengyouquan_gerenxinxi_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">


        <ImageView
            android:id="@+id/head_pengyouquan_fragment_head"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView181"
            app:srcCompat="@mipmap/morentouxiang" />

        <TextView
            android:id="@+id/head_pengyouquan_fragment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:text="Y.C.Pixel"
            android:textColor="@color/erjibiaoti"
            app:layout_constraintEnd_toStartOf="@+id/head_pengyouquan_fragment_head"
            app:layout_constraintTop_toTopOf="@+id/head_pengyouquan_fragment_head" />

        <TextView
            android:id="@+id/head_pengyouquan_fragment_renzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:text="未认证"
            android:textSize="@dimen/x24"
            app:layout_constraintEnd_toStartOf="@+id/head_pengyouquan_fragment_head"
            app:layout_constraintTop_toBottomOf="@+id/head_pengyouquan_fragment_name" />

        <ImageView
            android:id="@+id/head_pengyouquan_fragment_renzheng_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/head_pengyouquan_fragment_renzheng"
            app:layout_constraintEnd_toStartOf="@+id/head_pengyouquan_fragment_renzheng"
            app:layout_constraintTop_toTopOf="@+id/head_pengyouquan_fragment_renzheng"
            app:srcCompat="@mipmap/dav_gray" />

        <TextView
            android:id="@+id/textView180"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/fengexian"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/head_pengyouquan_fragment_head" />

        <TextView
            android:id="@+id/textView181"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/fengexian"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/head_pengyouquan_fragment_dav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bigv"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/head_pengyouquan_fragment_head" />

    </android.support.constraint.ConstraintLayout>

    <com.webianks.library.PopupBubble
        android:id="@+id/popup_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_pengyouquan_gerenxinxi_layout"
        app:pb_backgroundColor="@color/chunhongse"
        app:pb_textColor="@color/baise">

    </com.webianks.library.PopupBubble>
    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_pengyouquan_swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_bubble">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_pengyouquan_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>


</android.support.constraint.ConstraintLayout>