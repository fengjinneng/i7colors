<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/vlayout_home_part2_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/vlayout_home_part1_view1"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/chunhongse" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/vlayout_home_part1_view1"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="促销活动" />


    </RelativeLayout>


    <ImageView
        android:visibility="gone"
        android:scaleType="fitXY"
        android:id="@+id/vlayout_home_part2_img1"
        android:layout_width="0dp"
        android:layout_height="@dimen/x145"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vlayout_home_part2_title">

    </ImageView>

    <ImageView
        android:visibility="gone"
        android:scaleType="fitXY"
        android:id="@+id/vlayout_home_part2_img2"
        android:layout_width="0dp"
        android:layout_height="@dimen/x145"
        android:src="@drawable/place_500x500"
        app:layout_constraintEnd_toStartOf="@+id/vlayout_home_part2_img3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vlayout_home_part2_img1" />

    <ImageView
        android:visibility="gone"
        android:scaleType="fitXY"
        android:id="@+id/vlayout_home_part2_img3"
        android:layout_width="0dp"
        android:layout_height="@dimen/x145"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/vlayout_home_part2_img2"
        app:layout_constraintTop_toTopOf="@+id/vlayout_home_part2_img2"
        app:srcCompat="@mipmap/anniujianbian" />

    <ImageView
        android:visibility="gone"
        android:scaleType="fitXY"
        android:id="@+id/vlayout_home_part2_img4"
        android:layout_width="0dp"
        android:layout_height="@dimen/x145"
        app:layout_constraintEnd_toStartOf="@+id/vlayout_home_part2_img5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vlayout_home_part2_img2"
        app:srcCompat="@drawable/backgroud_daojishi" />

    <ImageView
        android:visibility="gone"
        android:scaleType="fitXY"
        android:id="@+id/vlayout_home_part2_img5"
        android:layout_width="0dp"
        android:layout_height="@dimen/x145"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/vlayout_home_part2_img4"
        app:layout_constraintTop_toTopOf="@+id/vlayout_home_part2_img4"
        app:srcCompat="@mipmap/canpindating" />

    <TextView
        android:id="@+id/textView147"
        android:layout_width="0dp"
        android:background="@color/fengexian"
        android:layout_height="@dimen/x20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vlayout_home_part2_img4" />


</android.support.constraint.ConstraintLayout>