<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_my_mot_read_img"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/app_img" />

    <TextView
        android:id="@+id/item_my_mot_read_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/x8"
        android:text="颜儿"
        android:textColor="@color/lanse"
        android:textSize="@dimen/x28"
        app:layout_constraintEnd_toStartOf="@+id/item_my_mot_read_time"
        app:layout_constraintStart_toEndOf="@+id/item_my_mot_read_img"
        app:layout_constraintTop_toTopOf="@+id/item_my_mot_read_img" />

    <TextView
        android:id="@+id/item_my_mot_read_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="@dimen/x8"
        android:text="我教你，现在改版了"
        android:minLines="2"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_my_mot_read_name"
        app:layout_constraintTop_toBottomOf="@+id/item_my_mot_read_name" />

    <TextView
        android:id="@+id/item_my_mot_read_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"

        app:layout_constraintBottom_toBottomOf="@+id/item_my_mot_read_name"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>