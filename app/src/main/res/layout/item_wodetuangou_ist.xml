<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/baise"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_wodetuangou_list_img"
        android:layout_width="@dimen/x240"
        android:layout_height="@dimen/x240"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/place_500x500" />

    <TextView
        android:id="@+id/item_wodetuangou_list_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/erjibiaoti"
        android:textSize="@dimen/x36"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_wodetuangou_list_img"
        app:layout_constraintTop_toTopOf="@+id/item_wodetuangou_list_img" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="团购价: ¥"
        android:textColor="@color/chunhongse"
        android:textSize="@dimen/x30"
        app:layout_constraintBottom_toBottomOf="@+id/item_wodetuangou_list_img"
        app:layout_constraintStart_toEndOf="@+id/item_wodetuangou_list_img" />

    <TextView
        android:id="@+id/item_wodetuangou_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/chunhongse"
        android:textSize="@dimen/x40"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
        app:layout_constraintStart_toEndOf="@+id/textView9" />

    <TextView
        android:id="@+id/item_wodetuangou_list_price_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/chunhongse"
        android:textSize="@dimen/x30"
        app:layout_constraintBaseline_toBaselineOf="@+id/item_wodetuangou_list_price"
        app:layout_constraintStart_toEndOf="@+id/item_wodetuangou_list_price" />

    <TextView
        android:id="@+id/textView358"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="我的购买量:"
        android:textSize="@dimen/x30"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toEndOf="@+id/item_wodetuangou_list_img" />

    <TextView
        android:id="@+id/item_wodetuangou_list_goumailiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textStyle="bold"
        android:textSize="@dimen/x40"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView358"
        app:layout_constraintStart_toEndOf="@+id/textView358" />

    <TextView
        android:id="@+id/item_wodetuangou_list_goumailiang_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="@dimen/x30"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView358"
        app:layout_constraintStart_toEndOf="@+id/item_wodetuangou_list_goumailiang" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:background="@color/fengexian"
        android:layout_height="@dimen/x16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>