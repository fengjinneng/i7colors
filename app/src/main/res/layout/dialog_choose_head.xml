<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--标题颜色应该与众不同、
        android:textColor="@color/black_3"-->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:text="选择您要的操作"
        android:gravity="center"
        android:textSize="@dimen/x24"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginRight="@dimen/x9"
        android:background="@color/fengexian"/>

    <TextView
        android:id="@+id/tv_take_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:text="拍照"
        android:gravity="center"
        android:textColor="@color/erjibiaoti"
        android:textSize="@dimen/x24"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginRight="@dimen/x9"
        android:background="@color/fengexian"/>

    <TextView
        android:id="@+id/tv_choose_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:text="从相册选择图片"
        android:gravity="center"
        android:textColor="@color/erjibiaoti"
        android:textSize="@dimen/x24"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginRight="@dimen/x9"
        android:background="@color/fengexian"/>
    <TextView
        android:id="@+id/tv_take_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:text="拍摄视频"
        android:gravity="center"
        android:textColor="@color/erjibiaoti"
        android:textSize="@dimen/x24"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginRight="@dimen/x9"
        android:background="@color/fengexian"/>
    <TextView
        android:id="@+id/tv_choose_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:text="选取本地视频"
        android:gravity="center"
        android:textColor="@color/erjibiaoti"
        android:textSize="@dimen/x24"/>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="@dimen/x24"
        android:background="@color/chunhongse"/>

</LinearLayout>
