<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/x140"
            android:orientation="vertical">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x500"
                android:layout_marginLeft="@dimen/x50"
                android:layout_marginRight="@dimen/x50"
                android:background="@drawable/background_kanjia">


                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/x150"
                    android:layout_marginEnd="8dp"
                    android:text="团购下单成功"
                    android:textSize="@dimen/x36"
                    android:textStyle="bold"
                    android:textColor="@color/erjibiaoti"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView356"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:text="立刻分享，好友助力砍价，还能享受比当前团购价更优惠的价格！"
                    android:textSize="@dimen/x30"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView35" />

                <TextView
                    android:id="@+id/bg_tuangouchenggong_tuangoujiagoumai"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x98"
                    android:background="@drawable/background_kanjia_tuangoujiagumai"
                    android:gravity="center"
                    android:text="团购价购买"
                    android:textSize="@dimen/x36"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/bg_tuangouchenggong_share"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/bg_tuangouchenggong_share"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x98"
                    android:background="@drawable/background_kanjia_share"
                    android:gravity="center"
                    android:text="分享砍价"
                    android:textColor="@color/baise"
                    android:textSize="@dimen/x36"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/bg_tuangouchenggong_tuangoujiagoumai" />
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/close"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x400"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/kanjiachenggong" />


    </RelativeLayout>


</LinearLayout>
