<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baise"
    android:orientation="vertical">


    <include
        android:id="@+id/include9"
        layout="@layout/toolbar"></include>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/textView62"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x14"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/x14"
                android:background="@drawable/biankuang_canyubaojia_tishi"
                android:padding="5dp"
                android:text="【提醒】报价将会第一时间通过短信的方式告知求购方，您的报价 被接受后系统将生成后续的交易订单，帮助你完成该笔交易。"
                android:textColor="@color/chunhongse"
                android:textSize="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activity_canyubaojia_chanpinming"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:textColor="@color/erjibiaoti"
                android:textSize="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/activity_canyubaojia_company"
                app:layout_constraintTop_toBottomOf="@+id/textView62" />

            <TextView
                android:id="@+id/activity_canyubaojia_company_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x40"
                android:layout_marginTop="@dimen/x40"
                android:drawableLeft="@mipmap/bitiantupian"
                android:drawablePadding="@dimen/x8"
                android:text="报价方:"
                android:textSize="@dimen/x30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_canyubaojia_chanpinming" />

            <EditText
                android:id="@+id/activity_canyubaojia_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_shuruwenbenkuang"
                android:maxLength="30"
                android:padding="@dimen/x10"
                android:textSize="@dimen/x30"
                app:layout_constraintBottom_toBottomOf="@+id/activity_canyubaojia_company_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/activity_canyubaojia_phone"
                app:layout_constraintTop_toTopOf="@+id/activity_canyubaojia_company_text" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x32"
                android:drawableLeft="@mipmap/bitiantupian"
                android:drawablePadding="@dimen/x8"
                android:text="联系电话:"
                android:textSize="@dimen/x30"
                app:layout_constraintStart_toStartOf="@+id/activity_canyubaojia_company_text"
                app:layout_constraintTop_toBottomOf="@+id/activity_canyubaojia_company" />

            <TextView
                android:id="@+id/textView67"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x32"
                android:drawableLeft="@mipmap/bitiantupian"
                android:drawablePadding="@dimen/x8"
                android:text="价格:"
                android:textSize="@dimen/x30"
                app:layout_constraintStart_toStartOf="@+id/textView66"
                app:layout_constraintTop_toBottomOf="@+id/activity_canyubaojia_phone" />

            <TextView
                android:id="@+id/textView68"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x32"
                android:drawableLeft="@mipmap/bitiantupian"
                android:drawablePadding="@dimen/x8"
                android:text="价格单位:"
                android:textSize="@dimen/x30"
                app:layout_constraintStart_toStartOf="@+id/textView67"
                app:layout_constraintTop_toBottomOf="@+id/activity_canyubaojia_price" />

            <TextView
                android:id="@+id/textView69"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x32"
                android:drawableLeft="@mipmap/bitiantupian"
                android:drawablePadding="@dimen/x8"
                android:text="是否包含运费:"
                android:textSize="@dimen/x30"
                app:layout_constraintStart_toStartOf="@+id/textView68"
                app:layout_constraintTop_toBottomOf="@+id/textView71" />

            <TextView
                android:id="@+id/textView70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x32"
                android:drawableLeft="@mipmap/bitiantupian"
                android:drawablePadding="@dimen/x8"
                android:text="有效时间:"
                android:textSize="@dimen/x30"
                app:layout_constraintStart_toStartOf="@+id/textView69"
                app:layout_constraintTop_toBottomOf="@+id/activity_canyubaojia_radio_group" />

            <EditText
                android:id="@+id/activity_canyubaojia_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_shuruwenbenkuang"
                android:inputType="number"
                android:maxLength="11"
                android:padding="@dimen/x10"
                android:textSize="@dimen/x30"
                app:layout_constraintBottom_toBottomOf="@+id/textView66"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/activity_canyubaojia_price"
                app:layout_constraintTop_toTopOf="@+id/textView66" />

            <EditText
                android:id="@+id/activity_canyubaojia_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_shuruwenbenkuang"
                android:inputType="numberDecimal"
                android:maxLength="8"
                android:padding="@dimen/x10"
                android:textSize="@dimen/x30"
                app:layout_constraintBottom_toBottomOf="@+id/textView67"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView71"
                app:layout_constraintTop_toTopOf="@+id/textView67" />

            <TextView
                android:id="@+id/textView71"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/"
                android:textSize="@dimen/x30"
                app:layout_constraintBottom_toBottomOf="@+id/textView68"
                app:layout_constraintStart_toStartOf="@+id/activity_canyubaojia_radio_group"
                app:layout_constraintTop_toTopOf="@+id/textView68" />

            <TextView
                android:id="@+id/activity_canyubaojia_time"
                android:layout_width="@dimen/x230"
                android:layout_height="wrap_content"
                android:background="@drawable/background_dengluwenbenkuang"
                android:drawableRight="@mipmap/xialajiantou"
                android:gravity="center"
                android:paddingTop="@dimen/x10"
                android:paddingRight="@dimen/x20"
                android:paddingBottom="@dimen/x10"
                android:text="请选择"
                android:textSize="@dimen/x30"
                app:layout_constraintBottom_toBottomOf="@+id/textView70"
                app:layout_constraintStart_toStartOf="@+id/activity_canyubaojia_radio_group"
                app:layout_constraintTop_toTopOf="@+id/textView70" />

            <TextView
                android:id="@+id/textView73"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/x90"
                android:layout_marginEnd="8dp"
                android:text="报价说明"
                android:textColor="@color/erjibiaoti"
                android:textSize="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_canyubaojia_time" />

            <EditText
                android:id="@+id/activity_canyubaojia_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_shuruwenbenkuang"
                android:gravity="top"
                android:hint="填写200字以内的报价说明..."
                android:maxLength="200"
                android:minLines="5"
                android:padding="5dp"
                android:textSize="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView73" />

            <RadioGroup
                android:id="@+id/activity_canyubaojia_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/textView69"
                app:layout_constraintStart_toEndOf="@+id/textView69"
                app:layout_constraintTop_toTopOf="@+id/textView69">

                <RadioButton
                    android:id="@+id/activity_canyubaojia_radio_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textSize="@dimen/x30" />

                <RadioButton
                    android:id="@+id/activity_canyubaojia_radio_no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="否"
                    android:textSize="@dimen/x30" />
            </RadioGroup>

            <TextView
                android:id="@+id/activity_canyubaojia_numunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x30"
                app:layout_constraintBottom_toBottomOf="@+id/textView71"
                app:layout_constraintStart_toEndOf="@+id/textView71" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v4.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/baise" />

    <Button
        android:id="@+id/activity_canyubaojia_fabubaojia"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x98"
        android:background="@drawable/button_jianbianbeijing"
        android:text="提交报价"
        android:textColor="@color/baise" />

</LinearLayout>