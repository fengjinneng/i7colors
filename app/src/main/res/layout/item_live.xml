<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x240">

    <ImageView
        android:id="@+id/item_live_img"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/x180"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/x30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/place_500x500" />

    <TextView
        android:id="@+id/item_live_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="针织节能减排技术新进展针织节能减排技术新进展针织节能减排技术新进展针织节能减排技术新进展"
        android:textColor="@color/erjibiaoti"
        android:textSize="@dimen/x36"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_live_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_live_describe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="课程介绍：一、针织与机织物资源消耗及污染物排放对比 二、针织物印染技术发展趋势 三、针织物节能减排代表性技术新进展"
        android:textSize="@dimen/x20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_live_img"
        app:layout_constraintTop_toBottomOf="@+id/item_live_title" />
</android.support.constraint.ConstraintLayout>