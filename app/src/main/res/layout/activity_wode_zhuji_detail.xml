<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.zhuji.ZhujiDetailActivity">


    <include
        android:id="@+id/include49"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_wode_zhuji_detail_submit"
        android:layout_width="0dp"
        android:layout_height="@dimen/x98"
        android:gravity="center"
        android:background="@mipmap/bg"
        android:textColor="@color/baise"
        android:text="关闭定制"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_wode_zhuji_detail_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/baise"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_wode_zhuji_detail_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include49" />


</android.support.constraint.ConstraintLayout>