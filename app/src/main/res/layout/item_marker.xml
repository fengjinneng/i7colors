<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/item_marker_pop"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/marker_unchecked" />

    <TextView
        android:id="@+id/item_marker_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="@dimen/x8"
        android:paddingRight="@dimen/x8"
        android:singleLine="true"
        android:textColor="@color/chunhongse"
        app:layout_constraintEnd_toEndOf="@+id/item_marker_pop"
        app:layout_constraintStart_toStartOf="@+id/item_marker_pop"
        app:layout_constraintTop_toTopOf="@+id/item_marker_pop" />
</android.support.constraint.ConstraintLayout>