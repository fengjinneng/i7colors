<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_huati_erjihuati_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/erjibiaoti"
        android:textSize="@dimen/x30"
        app:layout_constraintEnd_toStartOf="@+id/textView300"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_huati_erjihuati_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="@dimen/x26"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_huati_erjihuati_title"
        app:layout_constraintTop_toBottomOf="@+id/item_huati_erjihuati_title" />

    <TextView
        android:id="@+id/textView288"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="次"
        android:textSize="@dimen/x24"
        app:layout_constraintBottom_toBottomOf="@+id/item_huati_erjihuati_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/item_huati_erjihuati_cishu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x8"
        android:text="99"
        android:textSize="@dimen/x30"
        android:textColor="@color/hongse"
        app:layout_constraintBottom_toBottomOf="@+id/textView288"
        app:layout_constraintEnd_toStartOf="@+id/textView288" />

    <TextView
        android:id="@+id/textView300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x8"
        android:text="讨论"
        android:textSize="@dimen/x24"
        app:layout_constraintBottom_toBottomOf="@+id/textView288"
        app:layout_constraintEnd_toStartOf="@+id/item_huati_erjihuati_cishu" />

    <TextView
        android:id="@+id/textView289"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/fengexian"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>