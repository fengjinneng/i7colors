<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >




        <ImageView
            android:id="@+id/ad_dialog_img"
            android:layout_width="@dimen/x750"
            android:layout_height="@dimen/y650"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/place_500x500" />

    <ImageView
        android:id="@+id/ad_dialog_close"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/ad_dialog_img"
        app:layout_constraintStart_toStartOf="@+id/ad_dialog_img"
        app:layout_constraintTop_toBottomOf="@+id/ad_dialog_img"
        app:srcCompat="@mipmap/close_white" />





</android.support.constraint.ConstraintLayout>