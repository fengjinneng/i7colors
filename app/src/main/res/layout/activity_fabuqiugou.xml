                android:gravity="center"
                android:text="请选择"
                android:paddingRight="@dimen/x10"
                android:textSize="@dimen/x30"
                app:layout_constraintBottom_toBottomOf="@+id/textView29"
                app:layout_constraintEnd_toEndOf="@+id/activity_fabuqiugou_qiugoushuliang"
                app:layout_constraintStart_toStartOf="@+id/activity_fabuqiugou_qiugoushuliang"
