            <TextView
                android:id="@+id/activity_fabuqiugou_zhangqi"
                android:layout_width="0dp"
                android:layout_height="@dimen/x64"
                android:background="@drawable/background_dengluwenbenkuang"
                android:drawableRight="@mipmap/xialajiantou"
                android:gravity="center"
                android:text="请选择"
                android:paddingRight="@dimen/x10"
                android:textSize="@dimen/x30"
                app:layout_constraintBottom_toBottomOf="@+id/textView30"
                app:layout_constraintEnd_toEndOf="@+id/activity_fabuqiugou_fukuanfangshi"
                app:layout_constraintStart_toStartOf="@+id/activity_fabuqiugou_fukuanfangshi"
                app:layout_constraintTop_toTopOf="@+id/textView30" />

            <TextView
                android:id="@+id/activity_fabuqiugou_address"
                android:layout_width="0dp"
                android:layout_height="@dimen/x64"
                android:background="@drawable/background_dengluwenbenkuang"
                android:drawableRight="@mipmap/xialajiantou"
                android:gravity="center"
