            <TextView
                android:id="@+id/activity_fabuqiugou_jieshuriqi"
                android:layout_width="@dimen/x230"
                android:layout_height="@dimen/x64"
                android:background="@drawable/background_dengluwenbenkuang"
                android:drawableRight="@mipmap/xialajiantou"
                android:gravity="center"
                android:text="选择结束日期"
                android:paddingRight="@dimen/x10"
                android:textSize="@dimen/x30"
                app:layout_constraintBottom_toBottomOf="@+id/textView33"
                app:layout_constraintStart_toStartOf="@+id/activity_fabuqiugou_address"
                app:layout_constraintTop_toTopOf="@+id/textView33" />

            <TextView
                android:drawablePadding="@dimen/x8"
                android:drawableLeft="@mipmap/bitiantupian"
                android:id="@+id/textView47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x36"
                android:text="交货日期:"
                android:textColor="@color/erjibiaoti"
                android:textSize="@dimen/x30"
                app:layout_constraintStart_toStartOf="@+id/textView33"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <TextView
                android:id="@+id/activity_fabuqiugou_jiaohuoriqi"
                android:layout_width="@dimen/x230"
                android:layout_height="@dimen/x64"
