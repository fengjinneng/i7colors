                app:layout_constraintBottom_toBottomOf="@+id/activity_fabuqiugou_zhangqi"
                app:layout_constraintStart_toStartOf="@+id/activity_fabuqiugou_danwei"
                app:layout_constraintTop_toTopOf="@+id/activity_fabuqiugou_zhangqi" />

            <EditText
                android:id="@+id/activity_fabuqiugou_shoudongzhangqi"
                android:layout_width="0dp"
                android:layout_height="@dimen/x64"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="@dimen/x30"
                android:background="@drawable/background_shuruwenbenkuang"
                android:hint="勾选其它时间后可手动输入账期"
                android:paddingLeft="16dp"
                android:inputType="textPersonName"
                android:textSize="@dimen/x30"
                android:maxLength="20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/activity_fabuqiugou_zhangqi"
                app:layout_constraintTop_toBottomOf="@+id/activity_fabuqiugou_zhangqi" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginEnd="8dp"
                android:text="(求购结束时间不能小于3天，不能大于30天)"
                android:textColor="@color/chunhongse"
                android:textSize="@dimen/x30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/activity_fabuqiugou_jieshuriqi"
                app:layout_constraintTop_toBottomOf="@+id/activity_fabuqiugou_jieshuriqi" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="@dimen/x10"
                android:text="(交货日期不能小于结束日期)"
                android:textSize="@dimen/x30"
                android:textColor="@color/chunhongse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/activity_fabuqiugou_jiaohuoriqi"
                app:layout_constraintTop_toBottomOf="@+id/activity_fabuqiugou_jiaohuoriqi" />

