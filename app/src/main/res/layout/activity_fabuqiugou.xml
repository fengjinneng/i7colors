                android:gravity="center"
                android:text=""
                android:textSize="@dimen/x30"
                app:layout_constraintBottom_toBottomOf="@+id/activity_fabuqiugou_zongliangwei"
                app:layout_constraintStart_toEndOf="@+id/activity_fabuqiugou_zongliang"
