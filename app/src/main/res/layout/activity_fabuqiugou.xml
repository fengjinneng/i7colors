                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/x30"
                android:paddingLeft="@dimen/x10"
                app:layout_constraintBottom_toBottomOf="@+id/activity_fabuqiugou_qiugoushuliang"
                app:layout_constraintStart_toEndOf="@+id/activity_fabuqiugou_qiugoushuliang"
                app:layout_constraintTop_toTopOf="@+id/activity_fabuqiugou_qiugoushuliang" />

            <TextView
                android:id="@+id/activity_fabuqiugou_zongliangwei"
                android:layout_width="wrap_content"
