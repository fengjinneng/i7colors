                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/activity_fabuqiugou_danwei_text"
                app:layout_constraintStart_toEndOf="@+id/activity_fabuqiugou_danwei_text"
                app:layout_constraintTop_toTopOf="@+id/activity_fabuqiugou_danwei_text" />

            <TextView
                android:textColor="@color/chunhongse"
                android:id="@+id/activity_fabuqiugou_zongliang"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textSize="@dimen/x30"
                android:gravity="center"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@+id/activity_fabuqiugou_zongliangwei"
                app:layout_constraintStart_toEndOf="@+id/activity_fabuqiugou_zongliangwei"
                app:layout_constraintTop_toTopOf="@+id/activity_fabuqiugou_zongliangwei" />

