<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/item_city_info_layout"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_city_info_cityname"
        android:layout_width="0dp"
        android:layout_height="@dimen/x100"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_city_info_shuxian"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="0dp" />

    <TextView
        android:id="@+id/item_city_info_shuxian"
        android:layout_width="@dimen/x8"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/x24"
        android:layout_marginBottom="@dimen/x24"
        android:background="@color/chunhongse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>