<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:scaleType="centerInside"
        app:layout_collapseMode="parallax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/baise"
            tools:context=".ui.activity.tuangou.TuangouxiangqingActivity">

            <View
                android:id="@+id/include15"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/activity_tuangouxiangqing_img"
                android:layout_width="@dimen/x500"
                android:layout_height="@dimen/x500"
                android:src="@drawable/place_500x500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include15" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_img"
                app:layout_constraintTop_toBottomOf="@+id/include15"
                app:layout_constraintVertical_chainStyle="packed">

                <TextView
                    android:id="@+id/activity_youhuizhanxiao_totalnum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="51"
                    android:textColor="@color/chunhongse"
                    android:textSize="@dimen/x40"
                    app:layout_constraintBottom_toTopOf="@+id/activity_tuangouxiangqing_danyonghucaigou"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/activity_tuangouxiangqing_danyonghucaigou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="已销售总量"
                    android:textColor="@color/chunhongse"
                    android:textSize="@dimen/x24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_youhuizhanxiao_totalnum1" />

                <TextView
                    android:id="@+id/activity_youhuizhanxiao_totalnum1_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="吨"
                    android:textColor="@color/chunhongse"
                    android:textSize="@dimen/x24"
                    app:layout_constraintBottom_toBottomOf="@+id/activity_youhuizhanxiao_totalnum1"
                    app:layout_constraintStart_toEndOf="@+id/activity_youhuizhanxiao_totalnum1"
                    app:layout_constraintTop_toTopOf="@+id/activity_youhuizhanxiao_totalnum1" />
            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/fengexian"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout9"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout10" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout11"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_img"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout9">

                <TextView
                    android:id="@+id/textView65"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="原价:¥"
                    android:textSize="@dimen/x24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/activity_tuangouxiangqing_yuanjia"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/activity_tuangouxiangqing_yuanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35"
                    android:textSize="@dimen/x30"
                    app:layout_constraintBottom_toBottomOf="@+id/textView65"
                    app:layout_constraintEnd_toStartOf="@+id/activity_tuangouxiangqing_yuanjia_danwie"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textView65" />

                <TextView
                    android:id="@+id/activity_tuangouxiangqing_yuanjia_danwie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元/吨"
                    android:textSize="@dimen/x24"
                    app:layout_constraintBottom_toBottomOf="@+id/activity_tuangouxiangqing_yuanjia"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_yuanjia" />

                <TextView
                    android:id="@+id/textView110"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/erjibiaoti"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/activity_tuangouxiangqing_yuanjia_danwie"
                    app:layout_constraintHorizontal_bias="0.318"
                    app:layout_constraintStart_toStartOf="@+id/textView65"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.508" />
            </android.support.constraint.ConstraintLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/fengexian"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout10"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout11" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout11"
                android:layout_width="@dimen/x268"
                android:layout_height="0dp"
                android:background="@mipmap/shangpin_jiage"
                app:layout_constraintBottom_toBottomOf="@+id/activity_tuangouxiangqing_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/activity_tuangouxiangqing_img"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout10">

                <TextView
                    android:id="@+id/textView112"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="团购价:"
                    android:textColor="@color/baise"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/activity_tuangouxiangqing_tuangoujia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="9993332221111"
                    android:textColor="@color/baise"
                    android:textSize="@dimen/x40"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/activity_tuangouxiangqing_tuangoujia_danwei"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView112" />

                <TextView
                    android:id="@+id/activity_tuangouxiangqing_tuangoujia_danwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="元/吨"
                    android:textColor="@color/baise"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="35dp" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/activity_youhuizhanxiao_detail_productname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="活性翠兰G266%"
                android:textColor="@color/erjibiaoti"
                android:textSize="@dimen/x36"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_tuangouxiangqing_img" />

            <TextView
                android:id="@+id/textView200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="已销售总量:"
                android:textSize="@dimen/x28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/activity_youhuizhanxiao_detail_productname"
                app:layout_constraintTop_toBottomOf="@+id/activity_youhuizhanxiao_detail_productname" />

            <TextView
                android:id="@+id/activity_youhuizhanxiao_totalnum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="51"
                app:layout_constraintBottom_toBottomOf="@+id/textView200"
                app:layout_constraintStart_toEndOf="@+id/textView200"
                app:layout_constraintTop_toTopOf="@+id/textView200" />

            <TextView
                android:id="@+id/activity_youhuizhanxiao_totalnum2_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吨"
                app:layout_constraintBottom_toBottomOf="@+id/textView200"
                app:layout_constraintStart_toEndOf="@+id/activity_youhuizhanxiao_totalnum2"
                app:layout_constraintTop_toTopOf="@+id/textView200" />

        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="351dp" />

</android.support.constraint.ConstraintLayout>