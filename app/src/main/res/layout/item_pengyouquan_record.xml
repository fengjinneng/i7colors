<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/item_pengyouquan_record_mouth_and_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/8"
        app:layout_constraintEnd_toEndOf="@+id/item_pengyouquan_record_time"
        app:layout_constraintStart_toStartOf="@+id/item_pengyouquan_record_time"
        app:layout_constraintTop_toBottomOf="@+id/item_pengyouquan_record_time" />

    <TextView
        android:id="@+id/item_pengyouquan_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x40"
        android:layout_marginTop="@dimen/x16"
        android:gravity="center"
        android:text="今天"
        android:paddingBottom="@dimen/x20"
        android:textColor="@color/erjibiaoti"
        android:textSize="@dimen/x36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_pengyouquan_record_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x150"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_pengyouquan_record_img"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_pengyouquan_record_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/x16"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_pengyouquan_record_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginLeft="0dp" />

        <ImageView
            android:id="@+id/item_pengyouquan_record_play"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/item_pengyouquan_record_img"
            app:layout_constraintEnd_toEndOf="@+id/item_pengyouquan_record_img"
            app:layout_constraintStart_toStartOf="@+id/item_pengyouquan_record_img"
            app:layout_constraintTop_toTopOf="@+id/item_pengyouquan_record_img"
            app:srcCompat="@drawable/ic_player_center_start" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_pengyouquan_record_lianjie_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/x130"
        android:layout_marginStart="@dimen/x150"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@color/fengexian"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_pengyouquan_record_content_layout">

        <ImageView
            android:id="@+id/item_pengyouquan_record_lianjie_img"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/x8"
            android:layout_marginBottom="@dimen/x8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/app_img" />

        <TextView
            android:id="@+id/item_pengyouquan_record_lianjie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_pengyouquan_record_lianjie_img"
            app:layout_constraintTop_toTopOf="@+id/item_pengyouquan_record_lianjie_img" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textView318"
        android:layout_width="0dp"
        android:layout_height="@dimen/x30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_pengyouquan_record_lianjie_layout" />

</android.support.constraint.ConstraintLayout>
