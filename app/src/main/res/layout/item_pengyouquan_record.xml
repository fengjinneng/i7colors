<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_pengyouquan_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="今天"
        android:gravity="center"
        android:textColor="@color/erjibiaoti"
        android:textSize="@dimen/x36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_pengyouquan_record_img"
        android:layout_width="@dimen/x120"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_pengyouquan_record_time"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/item_pengyouquan_record_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:minLines="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_pengyouquan_record_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_pengyouquan_record_mouth_and_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/8"
        app:layout_constraintEnd_toEndOf="@+id/item_pengyouquan_record_time"
        app:layout_constraintStart_toStartOf="@+id/item_pengyouquan_record_time"
        app:layout_constraintTop_toBottomOf="@+id/item_pengyouquan_record_time" />

    <ImageView
        android:id="@+id/item_pengyouquan_record_play"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/x50"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_player_center_start"
        app:layout_constraintBottom_toBottomOf="@+id/item_pengyouquan_record_img"
        app:layout_constraintEnd_toEndOf="@+id/item_pengyouquan_record_img"
        app:layout_constraintStart_toStartOf="@+id/item_pengyouquan_record_img"
        app:layout_constraintTop_toTopOf="@+id/item_pengyouquan_record_img"
       />
</android.support.constraint.ConstraintLayout>