<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_system_message_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_dengluwenbenkuang_quexia"
        android:paddingLeft="@dimen/x20"
        android:paddingTop="@dimen/x20"
        android:paddingBottom="@dimen/x20"
        android:textColor="@color/erjibiaoti"
        android:textSize="@dimen/x36"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_system_message_time" />

    <ImageView
        android:id="@+id/item_system_message_img"
        android:layout_width="@dimen/x750"
        android:layout_height="@dimen/x300"
        android:visibility="gone"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_system_message_title" />

    <TextView
        android:id="@+id/item_system_message_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dengluwenbenkuang_queshang"
        android:paddingLeft="@dimen/x20"
        android:paddingTop="@dimen/x20"
        android:paddingBottom="@dimen/x20"
        android:textSize="@dimen/x30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_system_message_img" />

    <TextView
        android:id="@+id/item_system_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView154"
        android:layout_width="0dp"
        android:layout_height="@dimen/x20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_system_message_content" />

</android.support.constraint.ConstraintLayout>