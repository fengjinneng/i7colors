<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/baise"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_caigoulianmeng_yonghuodan_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/x80"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/erjibiaoti"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/item_caigoulianmeng_yonghuodan_chakan"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView194" />

    <TextView
        android:id="@+id/item_caigoulianmeng_yonghuodan_chakan"
        android:layout_width="@dimen/x150"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="查看"
        android:textSize="@dimen/x24"
        app:layout_constraintBottom_toBottomOf="@+id/item_caigoulianmeng_yonghuodan_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_caigoulianmeng_yonghuodan_name"
        app:srcCompat="@mipmap/xialajiantou" />

    <TextView
        android:id="@+id/item_caigoulianmeng_yonghuodan_status"
        android:layout_width="0dp"
        android:layout_height="@dimen/x60"
        android:gravity="center"
        android:textSize="@dimen/x24"
        android:textColor="@color/baise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_caigoulianmeng_yonghuodan_name" />

    <TextView
        android:id="@+id/textView194"
        android:layout_width="0dp"
        android:background="@color/fengexian"
        android:layout_height="@dimen/x20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>