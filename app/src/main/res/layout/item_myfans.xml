<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x180">

    <ImageView
        android:id="@+id/item_myfans_image"
        android:layout_width="@dimen/x108"
        android:layout_height="@dimen/x108"
        android:layout_marginLeft="@dimen/x20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/morentouxiang" />

    <TextView
        android:id="@+id/item_myfans_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x30"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/chunhongse"
        app:layout_constraintBottom_toTopOf="@+id/item_myfans_secondname"
        app:layout_constraintEnd_toStartOf="@+id/item_myfans_time"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_myfans_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/item_myfans_secondname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x30"
        android:layout_marginTop="@dimen/x8"
        android:layout_marginEnd="8dp"
        android:text="上海七彩云电子商务有限公司"
        android:textSize="@dimen/x24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_myfans_time"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_myfans_image"
        app:layout_constraintTop_toBottomOf="@+id/item_myfans_name" />

    <TextView
        android:id="@+id/item_myfans_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="2000-1-1"
        app:layout_constraintBottom_toTopOf="@+id/item_myfans_guanzhu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/item_myfans_bigv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/item_myfans_image"
        app:layout_constraintEnd_toEndOf="@+id/item_myfans_image"
        app:srcCompat="@mipmap/bigv" />

    <ImageView
        android:id="@+id/item_myfans_guanzhu"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x44"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_myfans_time"
        app:layout_constraintStart_toStartOf="@+id/item_myfans_time"
        app:layout_constraintTop_toBottomOf="@+id/item_myfans_time"
        app:srcCompat="@drawable/jiaguanzhu" />
</android.support.constraint.ConstraintLayout>