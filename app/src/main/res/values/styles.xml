<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/chunhongse</item>
        <item name="colorPrimaryDark">@color/chunhongse</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="custom_seekbar" parent="@android:style/Widget.SeekBar">

        <item name="android:maxHeight">@dimen/x8</item>

        <item name="android:indeterminateOnly">false</item>

        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>

        <item name="android:progressDrawable">@drawable/seekbar_horizontal</item>

        <item name="android:minHeight">@dimen/x8</item>

        <item name="android:thumb">@android:color/transparent</item>

        <item name="android:thumbOffset">0dp</item>

    </style>


    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/baise</item> <!--  菜单字体颜色-->
        <item name="android:textSize">@dimen/x30</item> <!-- 菜单字体大小-->
    </style>



    <!--点赞的popwindow-->

    <style name="social_pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>


    <!--dialog  弹出拍照样式-->
    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--dialog  样式-->
    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/translate_dialog_out</item>
    </style>

</resources>
